#!/usr/bin/env bash
# install nginx on the server
# update apt and install nginx
sudo apt-get update
sudo apt-get -y install nginx
# replace the default index.html with hello world
echo "Hello World!" | sudo tee /var/www/html/index.nginx-debian.html
# redirect page redirect_me to youtube
sed '/location / {/a \n\t\trewrite ^/redirect_me$ https://www.youtube.com permanent;' /etc/nginx/sites-available/default
# restart to apply the changes
sudo service nginx restart
